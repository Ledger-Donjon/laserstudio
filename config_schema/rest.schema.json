{
    "$id": "rest.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "host": {
            "type": "string",
            "description": "IP or hostname REST device.",
            "examples": [
                "localhost",
                "127.0.0.1"
            ]
        },
        "port": {
            "type": "integer",
            "description": "Port to connect to the REST device.",
            "minimum": 1,
            "maximum": 65535,
            "example": 4000
        },
        "api_command": {
            "type": "string",
            "description": "Default API command."
        }
    },
    "required": [
        "api_command"
    ]
}
