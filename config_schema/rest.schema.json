{
    "$id": "rest.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "host": {
            "type": "string",
            "description": "IP or hostname Rest device."
        },
        "port": {
            "type": "integer",
            "description": "Port to connect to the Rest device."
        },
        "api_command": {
            "type": "string",
            "description": "Default API command."
        }
    },
    "required": [
        "api_command"
    ]
}
