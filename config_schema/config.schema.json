{
    "$id": "config.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Laser Studio Configuration File",
    "type": "object",
    "properties": {
        "camera": {
            "$ref": "camera.schema.json"
        },
        "stage": {
            "$ref": "stage.schema.json"
        },
        "lasers": {
            "type": "array",
            "items": {
                "$ref": "laser.schema.json"
            }
        },
        "probes": {
            "type": "array",
            "items": {
                "$ref": "probe.schema.json"
            }
        }
    }
}