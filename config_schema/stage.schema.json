{
    "$id": "stage.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Stage",
    "type": "object",
    "description": "A Stage.",
    "properties": {
        "enable": {
            "type": "boolean",
            "description": "If the device is enabled or not."
        },
        "unit_factors": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "description": "Size in micrometers of one pixel, when no image distortion is applied. Provide two values if the size if not the same for width and height."
        }
    },
    "oneOf": [
        {
            "properties": {
                "type": {
                    "const": "Corvus",
                    "description": "Corvus Stage."
                }
            },
            "$ref": "serial.schema.json"
        },
        {
            "properties": {
                "type": {
                    "const": "REST",
                    "description": "A Stage responding to a Rest API."
                }
            },
            "$ref": "rest.schema.json"
        }
    ],
    "required": [
        "type"
    ]
}