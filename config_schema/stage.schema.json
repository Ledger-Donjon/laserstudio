{
    "$id": "stage.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Stage",
    "type": "object",
    "allOf": [
        {
            "$ref": "instrument.schema.json"
        }
    ],
    "properties": {
        "unit_factors": {
            "description": "The conversion factors for the stage's units, for each axis. Give one value if it is the same for all axes.",
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "number",
                "suffix": "um/unit"
            }
        }
    },
    "oneOf": [
        {
            "description": "Corvus",
            "allOf": [
                {
                    "properties": {
                        "type": {
                            "const": "Corvus",
                            "description": "A Corvus Stage."
                        }
                    }
                },
                {
                    "$ref": "serial.schema.json"
                }
            ]
        },
        {
            "description": "CNC",
            "allOf": [
                {
                    "properties": {
                        "type": {
                            "const": "CNC",
                            "description": "A CNC Stage."
                        }
                    }
                },
                {
                    "$ref": "serial.schema.json"
                }
            ]
        },
        {
            "description": "Dummy",
            "properties": {
                "type": {
                    "const": "Dummy",
                    "description": "A Dummy Stage."
                }
            }
        },
        {
            "description": "REST",
            "properties": {
                "type": {
                    "const": "REST",
                    "description": "A Stage responding to a Rest API."
                }
            },
            "allOf": [
                {
                    "$ref": "rest.schema.json"
                }
            ]
        }
    ],
    "required": [
        "type"
    ]
}
