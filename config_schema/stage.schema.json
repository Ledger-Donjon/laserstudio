{
    "$id": "stage.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Stage",
    "type": "object",
    "description": "A Stage.",
    "allOf": [
        {
            "$ref": "instrument.schema.json"
        }
    ],
    "properties": {
        "unit_factors": {
            "type": "array",
            "items": {
                "type": "number"
            }
        },
        "unit_factor": {
            "type": "number"
        }
    },
    "oneOf": [
        {
            "properties": {
                "type": {
                    "const": "Corvus",
                    "description": "Corvus Stage."
                }
            },
            "$ref": "serial.schema.json"
        },
        {
            "properties": {
                "type": {
                    "const": "CNC",
                    "description": "CNC Stage."
                }
            }
        },
        {
            "properties": {
                "type": {
                    "const": "Dummy",
                    "description": "A Dummy Stage."
                }
            }
        },
        {
            "properties": {
                "type": {
                    "const": "REST",
                    "description": "A Stage responding to a Rest API."
                }
            },
            "$ref": "rest.schema.json"
        }
    ],
    "required": [
        "type"
    ]
}
