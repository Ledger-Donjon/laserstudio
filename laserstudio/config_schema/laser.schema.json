{
  "$id": "laser.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Laser",
  "type": "object",
  "description": "A Laser generator device.",
  "properties": {
    "shutter": {
      "allOf": [
        {
          "title": "ALPhANOV LMS Controller as shutter",
          "description": "Shutter sytem for Laser by ALPhANOV."
        },
        {
          "$ref": "lmscontroller.schema.json"
        },
        {
          "properties": {
            "motor": {
              "type": "integer",
              "default": 2,
              "minimum": 1,
              "maximum": 3,
              "description": "The motor's number actuating the laser shutter"
            }
          }
        }
      ]
    }
  },
  "allOf": [
    {
      "$ref": "probe.schema.json"
    }
  ],
  "oneOf": [
    {
      "title": "PDM",
      "allOf": [
        {
          "$ref": "serial.schema.json"
        }
      ],
      "properties": {
        "type": {
          "const": "PDM",
          "description": "Pulse-on-Demand Module from ALPhANOV."
        },
        "refresh_interval_ms": {
          "type": "integer",
          "description": "Refreshing rate, in milliseconds. If not set, there is no auto-update.",
          "minimum": 1,
          "suffix": "ms"
        },
        "num": {
          "type": "integer",
          "description": "The hardware index of the PDM device.",
          "minimum": 1,
          "maximum": 4
        }
      },
      "required": ["num"]
    },
    {
      "title": "DonjonLaser",
      "properties": {
        "type": {
          "const": "DonjonLaser",
          "description": "Donjon's Laser Driver."
        }
      }
    }
  ],
  "required": ["type"]
}
