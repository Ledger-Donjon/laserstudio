{
  "$id": "light.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Light",
  "type": "object",
  "oneOf": [
    {
      "$ref": "hayashi.schema.json"
    },
    {
      "allOf": [
        {
          "description": "Lighting sytem by ALPhANOV."
        },
        {
          "properties": {
            "motor": {
              "type": "integer",
              "default": 1,
              "minimum": 1,
              "maximum": 3,
              "description": "The motor's number actuating the light shutter"
            }
          }
        },
        {
          "$ref": "lmscontroller.schema.json"
        },
        {
          "required": ["motor"]
        }
      ]
    }
  ],
  "description": "Lighting instrument.",
  "required": ["type"]
}
