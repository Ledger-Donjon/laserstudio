{
  "$id": "stage.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stage",
  "type": "object",
  "allOf": [
    {
      "$ref": "instrument.schema.json"
    }
  ],
  "properties": {
    "unit_factors": {
      "description": "The conversion factors for the stage's units, for each axis. Give one value if it is the same for all axes. Extra values are ignored and lacking values are set to last provided value.",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "number",
        "suffix": "um/unit",
        "default": 1.0
      }
    }
  },
  "oneOf": [
    {
      "title": "Corvus",
      "allOf": [
        {
          "properties": {
            "type": {
              "const": "Corvus",
              "description": "A Corvus Stage."
            }
          }
        },
        {
          "$ref": "serial.schema.json"
        }
      ]
    },
    {
      "title": "CNC",
      "allOf": [
        {
          "properties": {
            "type": {
              "const": "CNC",
              "description": "A CNC Stage."
            }
          }
        },
        {
          "$ref": "serial.schema.json"
        }
      ]
    },
    {
      "title": "SMC100",
      "allOf": [
        {
          "properties": {
            "type": {
              "const": "SMC100",
              "description": "A Newport SMC100."
            },
            "adresses": {
              "description": "Adresses.",
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "integer"
              },
              "default": [1, 2]
            }
          }
        },
        {
          "$ref": "serial.schema.json"
        }
      ]
    },
    {
      "title": "PI",
      "allOf": [
        {
          "properties": {
            "type": {
              "const": "PI",
              "description": "A Physik Instrumente, Daisy-chain Mercury Servo Controller, or GCS-compatible."
            },
            "adresses": {
              "description": "Adresses.",
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "integer"
              },
              "default": [1, 2, 3]
            }
          }
        },
        {
          "$ref": "serial.schema.json"
        }
      ]
    },
    {
      "title": "Dummy",
      "properties": {
        "type": {
          "const": "Dummy",
          "description": "A Dummy Stage."
        }
      }
    },
    {
      "title": "REST",
      "properties": {
        "type": {
          "const": "REST",
          "description": "A Stage responding to a Rest API."
        }
      },
      "allOf": [
        {
          "$ref": "rest.schema.json"
        }
      ]
    }
  ],
  "required": ["type"]
}
